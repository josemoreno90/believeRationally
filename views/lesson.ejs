<% include partials/header %>
<div class="container">
  <h1>Lesson<h1>
  <div class='playlistDiv'>

    <% playlists.forEach(function(playlist){ %>
      <% for(let i=0; i< playlist.videos.length; i++) { %>
        <% if(playlist.videos[i].title.replace(/[, ]/g,'') === videoTitle) {  %>
          <h2> <%= playlist.videos[i].title %> </h2>
          <div class="intrinsic-container intrinsic-container-16x9">
            <iframe src="https://www.youtube.com/embed/<%= playlist.videos[i].videoId %>" frameborder="0" allowfullscreen align="middle"></iframe>
          </div>
          <h3>Lesson Summary</h3>
          <div class='breakLine'></div>
          <p> <%= playlist.videos[i].description %> </p>
        <% } %>
      <%  } %>
    <% }) %>



  </div>
</div>


<% include partials/footer %>
