<% include partials/header %>
<div class="container">

<div class='playlistDiv'>

        <% playlists.forEach(function(playlist){  %>
              <% if(playlist.title.replace(/[, ]/g,'') === playlistTitle ) { %>
                <h2> <%= playlist.title %> </h2>
                <img src= '<%= playlist.thumbnail %>' class='center-block' width='45%'height='auto' >
              <p class='descriptionText'> <%= playlist.description %> </p>
                <% for(let i = 0; i < playlist.videos.length; i++)  { %>
                    <h3 class= 'videoTitle'>
                      <a href='/courses/<%=playlist.title.replace(/[, ]/g,'')%>/<%=playlist.videos[i].title.replace(/[, ]/g,'')%>'> <%=  playlist.videos[i].title %> </a>
                    </h3>
                <% } %>
              <% } %>
        <% }); %>
    </div>
  </div>
<% include partials/footer %>
